[Unit]
Description=Tourneyping Web Server (Puma)
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/schedule
Environment=RAILS_ENV=production
Environment=RAILS_LOG_TO_STDOUT=1
EnvironmentFile=/home/ubuntu/schedule/.env.production
ExecStart=/home/ubuntu/.rbenv/shims/bundle exec puma -C config/puma.rb
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
